---
import type { ImageMetadata } from "astro";

interface Props {
  icon: ImageMetadata;
  iconAlt: string;
  title: string;
  subtitle?: string;
  items: string[];
}

const { icon, iconAlt, title, subtitle, items } = Astro.props as Props;
---
<article class="flex h-full flex-col gap-6 rounded-3xl bg-accent px-8 py-10 text-primary shadow-[0_10px_40px_-20px_rgba(58,35,59,0.45)]">
  <div class="flex items-center gap-4">
    <div class="flex h-14 w-14 items-center justify-center rounded-full bg-primary">
      <img src={icon.src} alt={iconAlt} class="h-7 w-7" loading="lazy" />
    </div>

    <div class="flex flex-col">
      <h3 class="font-heading text-2xl font-semibold text-primary md:text-3xl">
        {title}
      </h3>
      {subtitle && (
        <p class="text-xs font-semibold uppercase tracking-[0.25em] text-primary/60 md:text-sm">
          {subtitle}
        </p>
      )}
    </div>
  </div>

  <ul class="space-y-3 text-sm leading-relaxed text-primary/80 md:text-base">
    {items.map((item) => (
      <li class="flex gap-3">
        <span class="mt-2 inline-flex h-1.5 w-1.5 flex-none rounded-full bg-primary/30"></span>
        <span>{item}</span>
      </li>
    ))}
  </ul>
</article>

<style>
  @reference "../styles/global.css";
</style>
